@using spots.Models.Authorisation.Actions
@model spots.Models.Group.ViewModels.GroupInformationDetailsViewModel

@{
    var numberOfMembers = @Model.Members.Count();
}

<div class="row mg-sm-down mg-sm-up">
    <div class="col-xs-12">
        <div class="row">
            <div class="col-xs-4">
                <div class="mg-sm-left">
                    <div class="row height-sm bg-color-standard-light">
                        <div class="col-xs-5 mg-sm-up mg-sm-down">
                            <div class="mg-sm-left">
                                <img src="~/Content/images/img-empty-5.png" alt="Add Spot photo" class="center-img img-standard img-responsive" />
                            </div>
                        </div>
                        <div class="col-xs-5 col-xs-offset-1">
                            <div class="row">
                                <div class="col-xs-12 mg-md-up">
                                    <h2>@Model.Name</h2>
                                    <hr class="border-standard no-margin" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    @if (numberOfMembers <= 1)
                                    {
                                        <h5>@numberOfMembers member</h5>
                                    }
                                    else
                                    {
                                        <h5>@numberOfMembers members</h5>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-8">
                <div class="mg-sm-left mg-sm-right">
                    <div class="row height-sm bg-color-standard-light">
                        <div class="col-xs-12 no-side-padding">
                            <img src="~/Content/images/img-empty-6.png" alt="Add Title Photo" class="fit-img" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mg-sm-down mg-sm-up">
    <div class="col-xs-12">
        <div class="row">
            <div class="col-xs-6">
                <div class="mg-sm-left">
                    <div class="row height-lg bg-color-standard-light scrollable">
                        <div class="col-xs-offset-2 col-xs-8 text-center">
                            <div class="row mg-md-up">
                                <div class="col-xs-12">
                                    <h2>About us</h2>
                                </div>
                            </div>
                            <hr class="border-standard" />
                            <h3 class="mg-lg-up mg-xlg-down">@Model.Description</h3>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-6">
                <div class="mg-sm-left mg-sm-right">
                    <div class="row height-lg bg-color-standard-light scrollable">
                        <div class="col-xs-offset-2 col-xs-8 text-center">
                            <div class="row mg-md-up">
                                <div class="col-xs-12">
                                    <h2>Members</h2>
                                </div>
                            </div>
                            <hr class="border-standard" />
                        </div>
                        <div class="col-xs-12">
                            <div class="row" id="members">
                                @Html.Partial("Details/Information/_MembersPartial", @Model.Members)
                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    @if (Model.Actions.AddMember)
                                    {
                                        <a href="#" class="btn-remove btn-add">
                                            Manage members
                                                <span class="glyphicon glyphicon-cog btn-remove btn-add" aria-hidden="true"></span>
                                        </a>
                                        <div id="addmember" class="addmembers"></div>
                                    }
                                    else
                                    {
                                        <p>You are not admin or moderator, you cannot add a member</p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

