@model spots.Models.Event.ViewModels.EventDetailsViewModel

<div class="col-xs-12">
    <div class="row">
        <div class="col-xs-12 text-center">
            <h3>@Model.Title</h3>
        </div>
    </div>
    <div class="row mg-sm-up">
        <div class="col-xs-12 text-center">
            <div class="row">
                <div class="col-xs-6 col-xs-offset-3">
                    <span class="text-md glyphicon glyphicon-map-marker"></span>
                </div>
            </div>
            <div class="row">
                <p class="no-margin">@Model.Location</p>
            </div>
            <div class="row">
                <p class="no-margin">
                    @Html.ActionLink(Model.BusinessName, "Details", "Business", new {id = Model.BusinessId}, new { @class = "tracked" })'s
                    @Html.ActionLink(Model.SpotName, "Details", "Spot", new {id = Model.SpotId}, new { @class = "tracked" })
                </p>
            </div>
        </div>
    </div>
    <div class="row mg-sm-up">
        <div class="col-xs-12 text-center">
            <div class="row">
                <div class="col-xs-6 col-xs-offset-3">
                    <span class="glyphicon glyphicon-time"></span>
                </div>
            </div>
            <div class="row">
                <p class="no-margin">
                    @Model.StartDatetime - @Model.EndDatetime
                </p>
            </div>
        </div>
    </div>
    <div class="row mg-sm-up">
        <div class="col-xs-12 text-center">
            <div class="row">
                <div class="col-xs-12">
                    <span class="glyphicon glyphicon-user"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    Invited @Model.Invited.Count
                </div>
            </div>
        </div>
    </div>
    <hr class="border-standard-light" />
    <div class="row">
        <div class="col-xs-12 text-center">
            @Model.Description
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 text-center">
            @Html.ActionLink("More about this event", "Details", "Event", new {id = Model.Id}, new { @class = "tracked" })
        </div>
    </div>
</div>

