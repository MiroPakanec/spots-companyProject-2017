    @model spots.Modules.Calendar.ViewModels.CalendarViewModel

    @{
    ViewBag.Title = "Calendar";
    ViewData["Type"] = "global";
    Layout = "~/Views/Shared/_InLayout.cshtml";
    }

    <!--Top panel-->
<div class="row pd-md-up pd-md-down border-standard border-down">
    <div class="col-xs-12">
        <div class="row">
            <!--Month and Year Picker-->
            <div class="col-xs-4 text-center">
                <div class="row">
                    <div class="col-xs-1 col-xs-offset-1">
                        <!--Left Button-->
                        <button type="button" class="btn btn-sm" data-bind="click: updateDate.bind($data, -1)">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        </button>
                    </div>
                    @Html.LabelFor(m => m.DisplayDate, new {@class = "col-xs-4", id = "claendar-date-title", data_bind = "html:date"})
                    <div class="col-xs-1">
                        <!--Left Button-->
                        <button type="button" class="btn btn-sm" data-bind="click: updateDate.bind($data, 1)">
                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        </button>
                    </div>
                    <div class="col-xs-1">
                        <!--Reset Button-->
                        <button type="button" class="btn btn-sm" data-bind="click: getCurrentDate()">
                            <span class="glyphicon glyphicon-record tracked" aria-hidden="true"></span>
                        </button>
                    </div>
                </div>
            </div>
            <!--Group dropdown-->
            <div class="col-xs-2 col-xs-offset-3">
                Groups
            </div>
            <!--Calendar type-->
            <div class="col-xs-3">
                Types
            </div>
        </div>
    </div>
</div>

<!--Main-->
<div class="row">
    <div class="col-xs-9">
        <div class="container no-side-padding">
            <!--Days in week-->
            <div class="row seven-cols text-center border-down border-standard">
                <div class="col-md-1 border-right border-standard">Monday</div>
                <div class="col-md-1 border-right border-standard">Tuesday</div>
                <div class="col-md-1 border-right border-standard">Wednesday</div>
                <div class="col-md-1 border-right border-standard">Thursday</div>
                <div class="col-md-1 border-right border-standard">Friday</div>
                <div class="col-md-1 border-right border-standard">Saturday</div>
                <div class="col-md-1 border-right border-standard">Sunday</div>
            </div>
            <!--Calendar-->
            <div id="calendar-response" class="row seven-cols text-center"></div>
        </div>
    </div>
    <div class="col-xs-3">
        <div class="row">
            <div class="col-xs-12 no-side-padding">
                <div id="calendar-feature-events" class="feature-container bg-color-standard-light border-down border-standard"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 no-side-padding">
                <div id="calendar-feature-details"></div>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/Calendar")
@Styles.Render("~/Content/Calendar")

@Html.Partial("_ViewModelRenderer", ViewData["Type"])







