@model spots.Models.Location.Location

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_InLayout.cshtml";
}

<h2 class="text-center">Details</h2>

<div>
    <h4 class="text-center">Location</h4>
    <hr />
    <div class="row">
        <div class="col-xs-6 col-xs-offset-3">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.MongoId)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.MongoId)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Address)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Address)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Zip)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Zip)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.City)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.City)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Country)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Country)
                </dd>

            </dl>
        </div>
    </div>

    <div class="spots">
        <div class="row mg-md-up">
            <div class="col-xs-6 col-xs-offset-3">
                <p>Spots</p>
                <hr class="border-standard-light"/>
                @foreach (var spotId in Model.Spots)
                {
                    <div class="row">
                        <div class="col-xs-6">
                            <a href="@Url.Action("Details", "Spot", new {id=spotId.ToString()})">@spotId.ToString()</a>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6 col-xs-offset-3">
                @Html.ActionLink("Add", "Create", "Spot", new{locationId = Model.MongoId}, new{@class="btn btn-default"})
            </div>
        </div>
    </div>
</div>
