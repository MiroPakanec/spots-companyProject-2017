@model spots.Models.Event.ViewModels.EventDetailsViewModel

<div class="row mg-sm-down pd-sm-down pd-sm-up border-standard border-all bg-color-standard-light">
    <div class="col-xs-6">
        <!--Picture-->
        <img src="~/Content/images/img-empty-3.png" alt="Spot img" class="center-img img-standard img-responsive">
    </div>
    <div class="col-xs-6">
        <div class="row">
            <div class="col-xs-10 col-xs-offset-1">
                <h3>@Html.ActionLink(Model.Title, "Details", "Event", new {id = Model.Id.ToString()}, new { @class = "tracked" })</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-10 col-xs-offset-1">
                <div class="row">
                    <div class="col-xs-12">
                        <h5 class="glyphicon glyphicon-time" aria-hidden="true"> @Model.StartDatetime</h5>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        At
                        @Html.ActionLink(Model.BusinessName, "Details", "Business", new {id = Model.BusinessId}, new { @class = "tracked" })'s
                        @Html.ActionLink(Model.SpotName, "Details", "Spot", new {id = Model.SpotId}, new { @class = "tracked" })
                    </div>
                </div>
                <hr class="border-standard" />
                <div class="row">
                    <div class="col-xs-12 text-sm color-standard">
                        <p>@Model.Location</p>
                    </div>
                </div>  
            </div>
        </div>
    </div>
</div>

