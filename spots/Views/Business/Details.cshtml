@model spots.Models.Business.ViewModels.BusinessDetailsViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_InLayout.cshtml";
}


<div class="row mg-sm-down mg-sm-up">
    <div class="col-xs-12">
        <div class="row">
            <div class="col-xs-4">
                <div class="mg-sm-left">
                    <div class="row row-unit bg-color-standard-light">
                        <div class="col-xs-5 mg-sm-up mg-sm-down">
                            <div class="mg-sm-left">
                                <img src="~/Content/images/img-empty-5.png" alt="Add Spot photo" class="center-img img-standard img-responsive" />
                            </div>
                        </div>
                        <div class="col-xs-5 col-xs-offset-1">
                            <div class="row">
                                <div class="col-xs-12 mg-md-up">
                                    <h2>@Model.Name</h2>
                                    <hr class="border-standard no-margin" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    <h4>@Model.Occupation</h4>
                                </div>
                                <div class="col-xs-12">
                                    <h5>@Model.NumberOfEmployees members</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-8">
                <div class="mg-sm-left mg-sm-right">
                    <div class="row row-unit bg-color-standard-light">
                        <div class="col-xs-12 no-side-padding">
                            <img src="~/Content/images/img-empty-6.png" alt="Add Title Photo" class="" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row mg-sm-down">
    <div class="col-xs-12">
        <div class="row">
            <div class="col-xs-6">
                <div class="mg-sm-left">
                    <div class="row row-unit bg-color-standard-light">
                        <div class="col-xs-12">
                            <!--Describtion-->
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="mg-sm-left">
                                        <div class="row">
                                            <div class="col-xs-12">
                                                <h2>About @Model.Name</h2>
                                                <p>
                                                    @Model.Description
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row row-unit bg-color-standard-light mg-sm-up">
                        <div class="col-xs-12">
                            <!--Locations-->
                            <div class="row mg-sm-up">
                                @foreach (var item in @Model.Headquarters)
                                {
                                    <div class="col-xs-4">
                                        <div class="row">
                                            <div class="col-xs-12">
                                                <img src="~/Content/images/img-empty-7.png" alt="Add Spot photo" class="center-img img-standard img-responsive"/>
                                            </div>
                                        </div>
                                        <div class="row mg-sm-left">
                                            <h3>@item.City</h3>
                                            @Html.ActionLink("See more", "Details", "Location", new {id = item.MongoId}, new { @class = "tracked" })
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-xs-6">
                <div class="mg-sm-left mg-sm-right">
                    <div id="feature-events-height" class="row bg-color-standard-light">
                        <div class="col-xs-12">
                            <div id="feature-events-response"></div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mg-sm-down mg-sm-up">
    <div class="col-xs-12">
        <div class="row">
            <div class="col-xs-4">
                <div class="mg-sm-left">
                    <div class="row row-unit bg-color-standard-light">
                        <div class="col-md-10 col-md-offset-1">
                            <h2>Contacts</h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-8">
                <div class="mg-sm-left mg-sm-right">
                    <div class="row row-unit bg-color-standard-light">
                        @for (var i = 1; i <= 4; i++)
                        {
                        <div class="col-xs-3">
                            <div class="row mg-sm-up">
                                <div class="col-xs-12 text-center">
                                    <h4>Links @i</h4>
                                </div>
                            </div>
                            <div class="row">
                                @for (var j = 1; j <= 7; j++)
                                {
                                    <div class="col-xs-8 col-xs-offset-2 text-center">
                                        <a href="#">link @i @j</a>
                                    </div>
                                }
                            </div>
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@Scripts.Render("~/bundles/BusinessDetails")
@Styles.Render("~/Content/BusinessDetails")
@Html.Partial("ViewModels/_BusinessDetailsViewModel")